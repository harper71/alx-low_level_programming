CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)	
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h
	gcc -c main.c

school.o: school.c m.h
	gcc -c school.c

clean:
	$(RM) *~ $(NAME)

oclean:
	rm -f $(OBJ)

fclean: clean oclean

re: fclean all

