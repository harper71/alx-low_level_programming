CC = gcc
SRC = $(wildcard *.c)
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)	
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

main.o: main.c m.h
	gcc -c main.c

school.o: school.c m.h
	gcc -c school.c

clean:
	$(RM) *~ $(NAME)

oclean:
	rm -f $(OBJ)

fclean: clean oclean

re: fclean all

